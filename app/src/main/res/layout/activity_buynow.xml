<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.msupply1.com.msupply.Buynow">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/product_details_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/spproductperticularname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="qwerty qwerty qwert"
            android:textColor="@color/red_A700" />

        <TextView
            android:id="@+id/spproductdetailsid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spproductperticularname"
            android:text="asd546895212"
            android:textAllCaps="true"
            android:textColor="@color/green_500" />



        <TextView
            android:id="@+id/buynow_image_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="defoult value"
            android:layout_below="@+id/spproductdetailsid"
            />

        <ImageView
            android:id="@+id/spproductdetailsimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bricks"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/buynow_image_id"
            android:layout_centerHorizontal="true" />
            <View
                android:id="@+id/spimagedevidar"
                android:layout_width="match_parent"
                android:layout_below="@id/spproductdetailsimage"
                android:layout_height="1dp"
                android:background="#FFCCCCCC"
                />

            <LinearLayout
                android:id="@+id/spdotbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5sp"
                android:weightSum="3">
            <ImageView
                android:layout_width="30sp"
                android:layout_height="20sp"
                android:src="@drawable/ic_dot_128"

                />
            <TextView
                android:id="@+id/spcasondelavery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cash on Delivery eligible"
                android:textColor="@color/grey_700"
                android:textSize="15sp"
                android:layout_weight="3"/>
             </LinearLayout>

                <LinearLayout
                    android:id="@+id/spdotbutton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="20sp"
                        android:src="@drawable/ic_dot_128"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Inclusive of all taxes"
                        android:textColor="@color/grey_700"
                        android:layout_weight="3"


            />
            </LinearLayout>
</LinearLayout>








        <LinearLayout
            android:id="@+id/linearweight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_details_photo"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:text="Information"
                android:textColor="@color/red_A700"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:paddingLeft="30sp"
                android:text="           99"
                android:textColor="@color/green_A700"
                android:textSize="20sp" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/linearweight"
            android:layout_height="1dp"
            android:background="#FFCCCCCC"
            />
            <TextView
                android:id="@+id/sp_information"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="5dp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
                android:textColor="@color/grey_700"
                android:padding="5dp"
                android:layout_below="@+id/linearweight"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        <Button
            android:id="@+id/demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sp_information"
            android:text="Buy Now"
            android:layout_centerHorizontal="true"
            android:onClick="buynow"

            />



        <TextView
            android:id="@+id/relativeproduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Relative Products"
            android:layout_below="@+id/demo"
            android:textColor="@color/red_A700"
            android:textSize="20dp" />



        <RelativeLayout
            android:id="@+id/sprelativeproductlayout"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@+id/relativeproduct">
        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">

            <LinearLayout
                android:id="@+id/innerLay"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">
                <LinearLayout
                    android:id="@+id/asthma_action_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/controlled_medication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/bricks2" />
                        <TextView
                            android:layout_width="0.2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/accent"  />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/as_needed_medication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/bricks3" />
                        <TextView
                            android:layout_width="0.2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/accent"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rescue_medication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/bricks4" />
                        <TextView
                            android:layout_width="0.2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/accent"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/your_symptoms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/bricks5" />
                        <TextView
                            android:layout_width="0.2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/accent"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/your_triggers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/bricks6" />
                        <TextView
                            android:layout_width="0.2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/accent"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/wheeze_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/bricks7" />
                        <TextView
                            android:layout_width="0.2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/accent"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/peak_flow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/bricks8" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/hsv"
            android:background="@color/primary_light" />

        <LinearLayout
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:descendantFocusability="blocksDescendants" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_back_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:descendantFocusability="blocksDescendants" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_forward_black_24dp" />
        </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/spfrequentlybought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_below="@id/sprelativeproductlayout">

            <RelativeLayout
                android:id="@+id/spfrequentlybought1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_line"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:id="@+id/fequentlylayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="5">

                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_weight="2"
                        android:layout_gravity="left"
                        android:src="@drawable/bricks"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_add_plus_button"
                        android:layout_gravity="center_vertical"
                        />

                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_weight="2"
                        android:layout_gravity="left"
                        android:src="@drawable/cement"
                        />

                </LinearLayout>


                        <TextView
                            android:id="@+id/frequentlybothtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Total price : 299"
                            android:layout_weight="1"
                            android:layout_below="@id/fequentlylayout"
                            android:paddingLeft="60sp"
                            android:textColor="@color/grey_700"
                            />
                        <Button
                            android:layout_width="230sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_below="@+id/frequentlybothtext"
                            android:text="Add both to cart"
                            />


            </RelativeLayout>










        </RelativeLayout>



    </RelativeLayout>



    </ScrollView>
    </RelativeLayout>
