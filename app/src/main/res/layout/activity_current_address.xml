<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delavery Address"
        android:id="@+id/tv_current_address"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/ll_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_below="@+id/tv_current_address"
            android:background="@drawable/border_line">
            <EditText
                android:id="@+id/current_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:minLines="4"
                android:hint="Give delavery address"
                android:background="@drawable/border_line"
               />

            <ImageView
                android:id="@+id/current_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_location_black_24dp"
                android:layout_weight="1"
                />


</LinearLayout>

    <Button
        android:id="@+id/saveandcontinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_edittext"
        android:text="save and continue"
        android:layout_centerHorizontal="true"/>




</RelativeLayout>
